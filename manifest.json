{
  "name": "Note Taking Web Summarizer",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A tool for taking efficient notes from web pages",
  "permissions": [
      "activeTab",
      "storage",
      "scripting"
  ],
  "host_permissions": [
      "<all_urls>"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
      "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
