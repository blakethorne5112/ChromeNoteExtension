{
  "name": "Note Taking Web Summarizer",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A tool for taking efficient notes from web pages",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js", "content.js"]
    }
  ],
  "host_permissions": [
    "*://*/*", "<all_urls>"
  ]
}
