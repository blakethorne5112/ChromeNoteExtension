{
    "name": "Note Taking Web Summarizer",
    "version": "1.0",
    "minimum_chrome_version": "120",
    "manifest_version": 3,
    "description": "A tool for taking effiicent notes from web pages",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "storage",
        "scripting",
        "tabs",
        "http://127.0.0.1:5000/*",
        "declarativeContent"

    ],

    "host_permissions": [
      "http://127.0.0.1:5000/*"
    
    ],

    "background": {
      "service_worker": "background.js"
    }
  }
