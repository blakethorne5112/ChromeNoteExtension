{
    "name": "Note Taking Web Summarizer",
    "version": "1.0",
    "minimum_chrome_version": "120",
    "manifest_version": 3,
    "description": "A tool for taking effiicent notes from web pages",
    
  

    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs",
      "declarativeContent",
      "<all_urls>",
      "https://www.youtube.com/*"

    ],

    "host_permissions": [
      "http://127.0.0.1:5000/*",
      "https://www.youtube.com/*"
    
    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
      "js": ["content.js"]
      }
    ],

    

    "background": {
      "service_worker": "background.js"
    },

    "action": {
      "default_popup": "popup.html"
    }

  }
